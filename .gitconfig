[alias]
  a = add --all .
  aa = add --all :/
  br = branch
  ca = commit --amend
  ci = commit -a -m
  cm = commit -m
  co = checkout
  dh = diff HEAD
  fe = fetch --all
  l = log --graph
  re = remote -v
  rh = reset --hard
  rs = reset --soft
  st = status

[core]
  autocrlf = input
  pager = less -x4
  excludesfile = ~/.gitignore_global

[push]
  default = simple

[color]
  ui = true

[color "branch"]
  current = green
  remote = magenta

[color "status"]
  untracked = magenta

[format]
  pretty = format:%C(red)%h%Creset %C(bold)%G?%Creset %C(yellow)%an%Creset %s %C(bold)%ar%Creset %C(bold green)%d%Creset
